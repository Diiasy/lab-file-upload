<p>{{ post.content }}</p>
{{#if post.picName}}
    <img src="/uploads/post/{{ post.picName }}" alt="">
{{/if}}

<h4>Posted by: {{ post.creatorId.username }}</h1>

<div class="comments">
    <h3>Comments</h3>
    {{#each post.comments }}
        <p>{{ this.content }}</p>
        {{#if this.imageName}}
            <img src="/uploads/comments/{{ this.imageName }}" alt="">
        {{/if}}
        <p>{{ this.authorId.username }}</p>
    {{/each}}
</div>  

<div>
    <p>Add a comment:</p>
    <form action="/posts/comments/{{post._id}}" enctype="multipart/form-data" method="POST">
        <label for="input-content-comments">Content</label>
        <input type="text" id="input-content-comments" name="content" placeholder="Your content" />

        <label for="input-picture-comment">Comments picture</label>
        <input type="file" id="input-picture-comment" name="imageName">

        <button type="submit">Post</button>
        {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>
